<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/head', {title: "Dashboard"}) %>
  <body class="flex h-screen bg-gray-100">
    <%- include("layouts/sidebar") %>

    <div class="flex flex-col flex-1">
      <%- include("layouts/header") %>

      <main class="p-6 overflow-auto">
        <section class="bg-white p-4 rounded shadow">
          <h2 class="text-xl font-semibold mb-4">Requests by Table</h2>

          <div class="flex gap-2 mb-4">
            <label>From: <input type="date" id="fromDate" /></label>
            <label>To: <input type="date" id="toDate" /></label>
            <button
              type="button"
              id="applyRange"
              class="bg-blue-500 text-white px-3 py-1 rounded"
            >
              Apply
            </button>
          </div>

          <div class="w-full overflow-x-auto">
            <div id="barWrap" class="h-[260px] w-full">
              <canvas id="totalsBar"></canvas>
            </div>
          </div>
        </section>
        <section class="bg-white p-4 rounded shadow mt-6">
          <h2 class="text-xl font-semibold mb-4">Requests by Column</h2>

          <div class="flex gap-2 mb-4">
            <label for="colTableSelect">Select Table:</label>
           <select id="colTableSelect" class="border rounded px-2 py-1">
              <% Object.keys(tables || {}).forEach(function(tableName){ %>
                <option value="<%= tableName %>" <%= tableName === "T_BASE_OFFER" ? "selected" : "" %>>
                  <%= tableName %>
                </option>
              <% }); %>
            </select>
          </div>

          <div class="w-full overflow-x-auto">
            <div id="colBarWrap" class="h-[260px] w-full">
              <canvas id="columnsBar"></canvas>
            </div>
          </div>
        </section>
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script defer src="/js/dashboard-charts.js"></script>
  </body>
</html>
